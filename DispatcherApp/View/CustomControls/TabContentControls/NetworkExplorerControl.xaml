<UserControl x:Class="DispatcherApp.View.NetworkExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DispatcherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource MediumColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="7"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource DarkColor}"/>
        <Grid Grid.Row="1" Background="{StaticResource DarkColor}"/>
        <Grid Grid.Row="1" Grid.Column="1" Background="Transparent">
            <Expander Header="Sources" Foreground="Black" FontWeight="DemiBold" IsExpanded="True" Margin="15, 15, 15, 15">
                <StackPanel Margin="25, 5, 15, 15">
                    <ItemsControl ItemsSource="{Binding NetworkMapsBySourceButton}">
                    </ItemsControl>
                </StackPanel>
            </Expander>
        </Grid>
    </Grid>
</UserControl>
